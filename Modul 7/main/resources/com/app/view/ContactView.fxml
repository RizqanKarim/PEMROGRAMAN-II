<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.controller.ContactController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Aplikasi Daftar Kontak (CRUD)">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <TableView fx:id="contactTable" prefHeight="250.0" prefWidth="450.0">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Nama Lengkap" />
                <TableColumn fx:id="phoneColumn" prefWidth="120.0" text="No. HP" />
                <TableColumn fx:id="emailColumn" prefWidth="150.0" text="Email" />
            </columns>
        </TableView>

        <VBox spacing="5.0">
            <children>
                <TextField fx:id="nameField" promptText="Masukkan Nama" />
                <TextField fx:id="phoneField" promptText="Masukkan Nomor HP" />
                <TextField fx:id="emailField" promptText="Masukkan Email" />
            </children>
        </VBox>

        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Button onAction="#onAdd" text="Tambah" />
                <Button onAction="#onUpdate" text="Update" />
                <Button onAction="#onDelete" text="Hapus" />
                <Button onAction="#onClear" text="Bersihkan Form" />
            </children>
        </HBox>
    </children>
</VBox>